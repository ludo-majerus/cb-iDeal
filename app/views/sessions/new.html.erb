<%= form_tag sessions_path, :class => "form-horizontal" do %>

  <legend>Please authenticate</legend>
  
  <div class="control-group">
    <%= label_tag :email, nil, :class => "control-label", :for => "email" %>
    <div class="controls">
      <%= email_field_tag :email, nil, :placeholder => 'Enter your email here...' %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password,  nil, :class => "control-label", :for => "password" %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= submit_tag "Sign in", :class => "btn" %>
    </div>
  </div>

<% end %>

<%= link_to 'Sign up', new_user_path %>
